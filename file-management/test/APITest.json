      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "{{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fileId\": \"file-001\",\n  \"userId\": \"user123\",\n  \"filename\": \"hello.txt\",\n  \"folderId\": \"root\",\n  \"size\": 12345,\n  \"mimeType\": \"text/plain\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/metadata", "host": ["{{baseUrl}}"], "path": ["api", "metadata"] }
      }
    },
    {
      "name": "2. Get Metadata",
